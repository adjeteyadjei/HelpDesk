@{
    Layout = null;
}

<div class="page-header">
    <div class="">
        <strong>
            <a href="#">Teams</a>
            <small>Group users into teams with relationship to other teams</small>
        </strong>

    </div>
</div>

<div class="page_content">
    <div class="row">
        <div class="row">
            <div class="btn-group">
                <button class='btn btn-primary' ng-click="showNewTeam()" data-toggle="modal" data-target="#team_form">
                    <i class='iconfa-group'></i>Add Team
                </button>
            </div>

            <div class="pull-right col-sm-3">
                <input type="text" class="form-control" ng-model="searchText" placeholder="Search team by name ..." />
            </div>
        </div>

        <div class="panel panel-primary">
            <div class="panel-heading">Team List</div>
            <table class='table table-condensed table-hover'>
                <thead>
                    <tr>
                        <th class="ax_grid_action1">#</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Leader</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="team in teams | filter:searchText" ng-click="editTeam(team)" class="link-row">
                        <td>{{$index + 1}}</td>
                        <td>{{team.Name}}</td>
                        <td>{{team.Description}}</td>
                        <td>{{team.Leader}}</td>
                    </tr>
                </tbody>
            </table>

        </div>


        @Html.Partial("_TeamForm")

        <div class="modal fade delete_confirmation" id="confirm_delete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <a class="close" data-dismiss="modal">×</a>
                        <h5>Team</h5>
                    </div>
                    <div class="modal-body">
                        <p class="confirm">
                            <img src="~/Content/img/warning.png" alt="" />Are you sure you want to delete this team?
                        </p>
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-primary" ng-click="deleteTeam()"><i class='iconfa-check'></i>Yes </button>
                        <button class="btn btn-default" data-dismiss="modal"><i class='iconfa-ban-circle'></i>No</button>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
