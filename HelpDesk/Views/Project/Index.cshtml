@{
    ViewBag.Nav = "Projects";
}

<div class="page-header">
    <div class="">
        <strong>
            <a href="#">Projects</a>
            <small>All Projects</small>
        </strong>

    </div>
</div>

<div class="page_content">
    <div class="row" ng-controller="ProjectController">
        <div class="row">
            <div class="btn-group">
                <button class='btn btn-primary' ng-click="showNewProject()" data-toggle="modal" data-target="#project_form">
                    <i class='glyphicon glyphicon-th-large'></i>Add Project
                </button>
            </div>

            <div class="pull-right col-sm-3">
                <input type="text" class="form-control" ng-model="searchText" placeholder="Search project by name ..." />
            </div>
        </div>

        <div class="panel panel-primary">
            <div class="panel-heading">Project List</div>
            <div class="panel-body">
                <table class='table table-striped table-bordered ax_table table-condensed'>
                    <thead>
                        <tr>
                            <th class="ax_grid_action1">#</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Status</th>
                            <th>Teams</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="project in projects | filter:searchText" ng-click="editProject(project)" class="link-row">
                            <td>{{$index + 1}}</td>
                            <td>{{project.Name}}</td>
                            <td>{{project.Description}}</td>
                            <td> <label class="label label-success" ng-show="project.IsActive">Active</label> <label class="label label-danger" ng-hide="project.IsActive">InActive</label></td>
                            <td><label class="label label-warning" style="margin-left: 5px" ng-repeat="team in project.Teams">{{team.Name}}</label></td>
                        </tr>
                    </tbody>
                </table>
            </div>

        </div>


        @Html.Partial("_ProjectForm")

        <div class="modal fade delete_confirmation" id="confirm_delete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <a class="close" data-dismiss="modal">×</a>
                        <h5>Project</h5>
                    </div>
                    <div class="modal-body">
                        <p class="confirm">
                            <img src="~/Content/img/warning.png" alt="" />Are you sure you want to delete this project?
                        </p>
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-primary" ng-click="deleteProject()"><i class='iconfa-check'></i>Yes </button>
                        <button class="btn btn-default" data-dismiss="modal"><i class='iconfa-ban-circle'></i>No</button>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
@section scripts
{
    <script src="~/Scripts/app/controllers/ProjectController.js"></script>
}
