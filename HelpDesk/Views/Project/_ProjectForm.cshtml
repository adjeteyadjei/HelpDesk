
<div class="modal fade" id="project_form" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">{{ formTitle }}</h4>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="control-label" for="Name">Name:</label>
                        <div class="controls">
                            <input type="text" id="Name" class="form-control" value="" ng-model="newProject.Name" required="required" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label" for="Description">Description:</label>
                        <div class="controls">
                            <textarea id="Description" class="form-control" ng-model="newProject.Description" cols="5" rows="5"></textarea>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label">Teams:</label>
                        <div class="controls">
                            <select multiple="" ng-disabled="leadSelected(newProject.Leaders)" ui-select2="{}" class="form-control non_input_control" ng-model="newProject.Teams"
                                    ng-options="team as team.Name for team in teams" ng-selected="teamChange(newProject.Teams)"></select>
                        </div>
                    </div>
