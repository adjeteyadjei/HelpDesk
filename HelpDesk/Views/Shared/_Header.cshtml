@functions{
    private string PrintActive(string link)
    {
        return link == ViewBag.Nav ? "active" : string.Empty;
    }
}
<header class="navbar navbar-inverse navbar-fixed-top header" role="banner">
    <div class="">
        <div class="navbar-header">
            <button class="navbar-toggle collapsed" type="button" data-toggle="collapse" data-target=".bs-navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a href="#" class="navbar-brand">Help Desk</a>
        </div>
        <nav class="navbar-collapse collapse" role="navigation" style="height: 1px;">
            <ul class="nav navbar-nav">
                <li class="">
                    <a href="/Home/Index" class=@PrintActive("Home")><i class="glyphicon glyphicon-home"></i>Dashboard</a>
                </li>
                <li>
                    <a href="/Ticket/Index" class=@PrintActive("Tickets")><i class="iconfa-tags"></i>Tickets</a>
                </li>
                <li>
                    <a href="/Report/Index" class=@PrintActive("Reports")><i class="glyphicon glyphicon-book"></i>Reports</a>
                </li>
                @if (User.IsInRole("Administrator") || User.IsInRole("TeamLead"))
                {
                    <li>
                        <a href="/Administration/Users" class=@PrintActive("Users")><i class="iconfa-user"></i>Users</a>
                    </li>
                }

                @if (User.IsInRole("Administrator"))
                {
                    <li>
                        <a href="/Administration/Team" class=@PrintActive("Teams")><i class="iconfa-group"></i>Teams</a>
                    </li>
                    <li>
                        <a href="/Project/Index" class=@PrintActive("Projects")><i class="glyphicon glyphicon-th-large"></i>Projects</a>
                    </li>
                    <li>
                        <a href="/Configuration/Index" class=@PrintActive("Config")><i class="iconfa-cogs"></i>Configuration</a>
                    </li>
                }
            </ul>
            <div class="collapse navbar-collapse ">
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Welcome  @User.Identity.Name<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><a href="#">My Profile</a></li>
                            <li class="divider"></li>
                            <li>
                                @Html.ActionLink("Sign Out", "LogOut", "Home")
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </nav>
    </div>
</header>