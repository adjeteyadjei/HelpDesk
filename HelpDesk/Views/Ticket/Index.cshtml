@{
    Layout = null;
}

<div class="page-header">
    <div class="">
        <strong>
            <a href="#">Ticket</a>
            <small>Create and view your all tickets</small>
        </strong>

    </div>
</div>

<div class="row page_content">
    <div class="form-horizontal" role="form">
        <div class="form-group">
            <div class="col-sm-3">
                @*<span class="input-group-addon"><i class="fa fa-spinner {{loading}}"></i></span>*@
                <select id="project" class="form-control" ng-model="selectedProject"
                        ng-options="project as project.Name for project in projects"
                        data-placeholder="Select Project" ui-select2="{allowClear:true}"
                        ng-change="projectChange(selectedProject)">
                    <option></option>
                </select>
            </div>
            <div class="col-sm-9">

            </div>
        </div>
    </div>

    <div class="{{grid_size}}" id="ticket_grid">
        @Html.Partial("_TicketGrid")
    </div>

    <div class="col-sm-4 animated slideInRight" ng-show="showCreate" id="ticket_form">
        @Html.Partial("_TicketForm")
    </div>

</div>