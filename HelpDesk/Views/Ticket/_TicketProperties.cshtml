<div class="panel panel-primary">
    <div class="panel-heading">Ticket Properties</div>
    <div class="panel-body">
        <form class="form-horizontal" role="form">
            <div class="form-group">
                <label class="col-sm-5 control-label">Date Created:</label>
                <div class="col-sm-7">
                    <p class="form-control-static">{{newTicket.CreatedAt | date:'dd MMM yyyy - h:mm:a'}}</p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-5 control-label">Created By:</label>
                <div class="col-sm-7">
                    <p class="form-control-static">{{newTicket.AssignedBy.FullName}}</p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-5 control-label">Assigned To:</label>
                <div class="col-sm-7">
                    <p class="form-control-static">{{newTicket.AssignedTo.FullName}}</p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-5 control-label">Type:</label>
                <div class="col-sm-7">
                    <p class="form-control-static">{{newTicket.Type.Name}}</p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-5 control-label">Priority:</label>
                <div class="col-sm-7">
                    <p class="form-control-static"> <span class="{{newTicket.Priority.Name | lowercase}}">{{newTicket.Priority.Name}}</span> </p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-5 control-label">Status:</label>
                <div class="col-sm-7">
                    <p class="form-control-static">{{newTicket.Status.Name}}</p>
                </div>
            </div>
        </form>
    </div>
    <div class="panel-footer">
        <div class="btn-group">
            <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                <i class="glyphicon glyphicon-list-alt"></i>Ticket Action
                <span class="caret"></span>
            </button>
            <ul class="dropdown-menu">
                <li><a href="#" data-toggle="modal" data-target="#forward_form"><i class="glyphicon glyphicon-share ax_icon"></i>Forward Ticket</a></li>
                <li><a href="#" ng-click="solvedTicket(newTicket)"><i class='glyphicon glyphicon-ok-circle ax_icon'></i>Ticket Solved</a></li>
                <li class="divider"></li>
                <li><a href="#" ng-click="closeTicket(newTicket)"> <i class='glyphicon glyphicon-ban-circle ax_icon'></i>Close Ticket</a></li>
            </ul>
        </div>
    </div>
</div>
